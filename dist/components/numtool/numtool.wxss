.tool-wrap {
  flex: none;
  display: flex;
  align-items: center;
}

.less {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  box-sizing: border-box;
  border: 1rpx solid #ccc;
  color: #ccc;
  text-align: center;
  line-height: 45rpx;
}

.num {
  flex: none;
  width: 140rpx;
  text-align: center;
  border: 1rpx solid #ccc;
  margin: 0 10rpx;
}

.add {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  color: #fff;
  background-color: #d6ab7e;
  text-align: center;
  line-height: 45rpx;
}
