.pop-box {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}

.pop-box {
  background-color: #fff;
  left: 40rpx;
  right: 40rpx;
  border-radius: 16rpx;
  max-height: 80%;
  overflow: hidden;
  color: #222;
}

.pop-swiper-box {
  position: relative;
}

.pop-swiper-box swiper image {
  display: block;
  width: 100%;
  height: 350rpx;
  background-color: #ccc;
}

.pop-swiper-num {
  position: absolute;
  right: 32rpx;
  bottom: 80rpx;
  line-height: 32rpx;
  padding: 0 10rpx;
  background-color: rgba(0, 0, 0, 0.3);
  color: #fff;
  border-radius: 32rpx;
  font-size: 20rpx;
}

.icon-close {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  height: 60rpx;
  width: 60rpx;
  text-align: center;
  background-color: rgba(0, 0, 0, 0.4);
  color: #fff;
  border-radius: 50%;
  font-size: 40rpx;
  line-height: 55rpx;
}

.pop-scroll-box {
  padding: 30rpx 36rpx;
}

.pop-scroll-box .name {
  line-height: 54rpx;
  font-size: 34rpx;
  color: #222;
  font-weight: bold;
}

.pop-scroll-box .sub-tit {
  margin: 8rpx 0 10rpx;
  line-height: 44rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.pop-scroll-box .desc {
  font-size: 24rpx;
  line-height: 32rpx;
}

.pop-price-wrap {
  border-top: 1rpx #f1f1f1 solid;
  padding: 0 40rpx 20rpx;
}

.pop-btn {
  line-height: 80rpx;
  background-color: #d6ab7e;
  color: #fff;
  text-align: center;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.pop-price {
  padding: 38rpx 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 36rpx;
  font-weight: bold;
}

.pop-price .price {
  flex: none;
  display: flex;
  line-height: 50rpx;
  color: #d6ab7e;
}

.overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 10;
}

.del {
  margin-left: 20rpx;
  color: #ccc;
  text-decoration: line-through;
  font-weight: normal;
  font-size: 24rpx;
}

.label-wrap {
  display: flex;
  flex-wrap: wrap;
}

.label-wrap view {
  margin-right: 16rpx;
  margin-top: 6rpx;
  padding: 0 8rpx;
  font-size: 20rpx;
  line-height: 36rpx;
  background-color: #f6f6f6;
  color: #b7b7b7;
  border-radius: 4rpx;
}

scroll-view {
  height: 400rpx;
}
