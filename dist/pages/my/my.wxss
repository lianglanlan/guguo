page {
  background-color: #f5f5f5;
}

.avatar-wrap {
  margin-bottom: -54rpx;
  padding: 30rpx 50rpx 60rpx;
  background-color: #d6ab7e;
}

.avatar-box {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
}

.avatar-box .name {
  font-size: 40rpx;
}

.avatar {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
}

.my-item {
  display: flex;
  align-items: center;
  height: 100rpx;
  padding: 0 30rpx;
  color: #222;
  font-size: 30rpx;
  border-bottom: 1rpx solid #efefef;
}

.my-item:last-child {
  border-bottom: 0;
}

.my-item .name {
  flex: 1;
}

.my-item .right {
  flex: none;
  display: flex;
  align-items: center;
  color: #ccc;
}

.my-item .icon-arrow {
  line-height: 50rpx;
  margin-left: 10rpx;
  font-size: 40rpx;
  margin-top: -2rpx;
}
