page {
  background-color: #f5f5f5;
}

.address-wrap {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  padding: 20rpx;
}

.address-wrap .detail-wrap {
  flex: 1;
  min-width: 0;
}

.address-wrap .btn-primary {
  height: 60rpx;
  flex: none;
  padding: 0 30rpx;
  border-radius: 60rpx;
  font-size: 28rpx;
}

.address-wrap .user {
  line-height: 32rpx;
}

.address-wrap .name {
  color: #222;
  font-size: 28rpx;
}

.address-wrap .address {
  margin-top: 14rpx;
  line-height: 28rpx;
  color: #222;
  font-size: 24rpx;
}

.total-footer-wrap {
  height: 112rpx;
}

.total-footer {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 112rpx;
  padding: 0 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background-color: #fff;
  z-index: 2;
}

.total-footer .btn-primary {
  padding: 0 50rpx;
  height: 70rpx;
  border-radius: 70rpx;
}

.total-footer .price {
  color: #222;
  font-size: 30rpx;
}

.total-footer .price text {
  font-weight: bold;
}

.order-list .price {
  display: flex;
  align-items: center;
}

.order-list .price .del {
  margin-left: 0;
}
