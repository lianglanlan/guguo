page {
  background-color: #fff;
}

.banner-image {
  height: 350rpx;
}

.list-wrap {
  padding-top: 40rpx;
}

.list-wrap .item {
  display: flex;
  align-items: center;
  padding: 20rpx 40rpx;
}

.list-wrap image {
  flex: none;
  width: 120rpx;
  height: 120rpx;
  margin-right: 24rpx;
  border-radius: 8rpx;
  background-color: #ccc;
}

.list-wrap .detail {
  flex: 1;
  min-width: 0;
}

.list-wrap .tit {
  line-height: 42rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #222;
}

.list-wrap .desc {
  line-height: 36rpx;
  font-size: 26rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: normal;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  display: block;
  display: -webkit-box;
}
