page {
  background-color: #f5f5f5;
}

.input-wrap {
  padding: 0 40rpx;
  margin-top: 15rpx;
  background-color: #fff;
}

.input-item {
  display: flex;
  align-items: center;
  height: 100rpx;
  border-bottom: 1rpx solid #f0f0f0;
  color: #222;
  font-size: 28rpx;
}

.input-item .name {
  flex: none;
  width: 160rpx;
}

.input-item input {
  flex: 1;
}

.input-item .input-placeholder {
  color: #ccc;
}

.input-item label {
  margin-right: 40rpx;
}

.btn-save {
  margin: 30rpx auto 0;
  width: 670rpx !important;
  height: 100rpx;
  justify-content: center;
  border-radius: 8rpx;
  font-size: 36rpx;
  padding: 0;
}

.btn-save.disabled {
  opacity: 1;
}

.icon-arrow {
  color: #d6ab7e;
  font-size: 40rpx;
  padding: 0 10rpx 0 30rpx;
}
